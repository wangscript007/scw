<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
	<modelVersion>4.0.0</modelVersion>
	<parent>
		<groupId>scw</groupId>
		<artifactId>scw</artifactId>
		<version>1.0.0</version>
	</parent>
	<artifactId>scw-core</artifactId>
	<dependencies>
		<!-- 以下两个依赖在此模块中应该是强制依赖的，因为使用jarjar将其打包进来 且其他模块并不需要，所以optional为true -->
		<!-- https://mvnrepository.com/artifact/org.ow2.asm/asm -->
		<dependency>
			<groupId>org.ow2.asm</groupId>
			<artifactId>asm</artifactId>
			<version>7.1</version>
			<optional>true</optional>
		</dependency>
		
		<!-- https://mvnrepository.com/artifact/cglib/cglib -->
		<dependency>
			<groupId>cglib</groupId>
			<artifactId>cglib</artifactId>
			<version>3.3.0</version>
			<optional>true</optional>
		</dependency>
		
		<dependency>
			<groupId>commons-fileupload</groupId>
			<artifactId>commons-fileupload</artifactId>
			<scope>provided</scope>
		</dependency>
	</dependencies>
	<build>
		<plugins>
			<plugin>
				<groupId>org.sonatype.plugins</groupId>
				<artifactId>jarjar-maven-plugin</artifactId>
				<executions>
					<execution>
						<goals>
							<goal>jarjar</goal>
						</goals>
					</execution>
				</executions>
				<configuration>
					<overwrite>true</overwrite>
					<includes>
						<include>*:asm*</include>
						<include>*:cglib*</include>
					</includes>
					<rules>
						<rule>
							<pattern>org.objectweb.asm.*</pattern>
							<result>scw.asm.$@1</result>
						</rule>
						<rule>
							<pattern>org.objectweb.asm.**.*</pattern>
							<result>scw.asm.@1.$@2</result>
						</rule>
						<rule>
							<pattern>net.sf.cglib.*</pattern>
							<result>scw.cglib.$@1</result>
						</rule>
						<rule>
							<pattern>net.sf.cglib.**.*</pattern>
							<result>scw.cglib.@1.$@2</result>
						</rule>
					</rules>
				</configuration>
			</plugin>
		</plugins>
	</build>
</project>